<?xml version="1.0" encoding="utf-8" ?>

<BBCode>
	<Tag>
		<Id>bold</Id>
		<Img>bold.png</Img>
		<Description>Fett</Description>
		<Shortcut>b</Shortcut>
		<Regex><![CDATA[/\[b\](.*?)\[\/b\]/s]]></Regex>
		<Replace><![CDATA[<b>$1</b>]]></Replace>
	</Tag>
	<Tag>
		<Id>italic</Id>
		<Img>italic.png</Img>
		<Description>Kursiv</Description>
		<Shortcut>i</Shortcut>
		<Regex><![CDATA[/\[i\](.*?)\[\/i\]/s]]></Regex>
		<Replace><![CDATA[<i>$1</i>]]></Replace>
	</Tag>
	<Tag>
		<Id>underline</Id>
		<Img>underline.png</Img>
