		<Shortcut>u</Shortcut>
		<Regex><![CDATA[/\[u\](.*?)\[\/u\]/s]]></Regex>
		<Replace><![CDATA[<u>$1</u>]]></Replace>
	</Tag>
	<Tag>
		<Id>quote</Id>
		<Img>quote.png</Img>
		<Description>Zitieren</Description>
		<Shortcut>quote</Shortcut>
		<Regex><![CDATA[/\[quote\](.*?)\[\/quote\]/s]]></Regex>
		<Replace><![CDATA[<blockquote>$1</blockquote>]]></Replace>
	</Tag>
	<Tag>
		<Id>img</Id>
